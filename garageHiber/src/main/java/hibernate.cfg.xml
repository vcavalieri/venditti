<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.datasource">java:/comp/env/jdbc/garage2</property>
		<property name="show_sql">true</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		<mapping class="com.garage.model.User"></mapping>
		<mapping class="com.garage.model.UserHome"></mapping>
		<mapping class="com.garage.model.Prenotation"></mapping>
		<mapping class="com.garage.model.PrenotationHome"></mapping>
		<mapping class="com.garage.model.Vehicle"></mapping>
		<mapping class="com.garage.model.VehicleHome"></mapping>
		<mapping class="com.garage.model.Vehicleinfo"></mapping>
		<mapping class="com.garage.model.VehicleinfoHome"></mapping>
	</session-factory>
</hibernate-configuration> 
